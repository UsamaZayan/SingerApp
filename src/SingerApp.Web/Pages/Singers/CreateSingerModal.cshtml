@page
@using Microsoft.AspNetCore.Mvc.Localization
@using SingerApp.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model SingerApp.Web.Pages.Singers.CreateSingerModalModel
@inject IHtmlLocalizer<SingerAppResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Singer" asp-page="/Singers/CreateSingerModal">
    <abp-modal>
        <abp-modal-header title="@L["NewSinger"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs>
                <abp-tab title="English">
                    <abp-input asp-for="TranslationViewModelEn.Name"></abp-input>
                </abp-tab>
                <abp-tab title="عربي">
                    <abp-input asp-for="TranslationViewModelAr.Name"></abp-input>
                </abp-tab>
            </abp-tabs>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>